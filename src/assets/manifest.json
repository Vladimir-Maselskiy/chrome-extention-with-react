{
  "manifest_version": 3,
  "minimum_chrome_version": "120",
  "version": "1.0.0",
  "name": "AdBlocker-Test-Extension",
  "description": "Tools for remove web content",
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "options_page": "options.html",
  "action": {
    "default_title": "A-React-Title",
    "default_popup": "popup.html"
  },
  "permissions": ["storage", "tabs", "scripting", "activeTab", "userScripts"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.reddit.com/*"],
      "css": ["style.css"],
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["style.css", "*.js"],
      "matches": ["*://*.reddit.com/*"]
    },
    {
      "resources": ["*.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
